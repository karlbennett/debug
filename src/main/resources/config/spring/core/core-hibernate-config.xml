<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation=" http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                            http://www.springframework.org/schema/context
                            http://www.springframework.org/schema/context/spring-context-3.0.xsd
                            http://www.springframework.org/schema/tx
                            http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

    <import resource="classpath:config/spring/core/core-data-source-config.xml"/>

    <bean id="coreSessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="coreDataSource"/>
        <property name="packagesToScan" value="org.youthnet.debug.domain.core.lookups"/>
        <property name="annotatedClasses">
            <list>
                <value>org.youthnet.debug.domain.core.GenericDTO</value>
                <value>org.youthnet.debug.domain.core.Address</value>
                <value>org.youthnet.debug.domain.core.PolicyEntry</value>
                <value>org.youthnet.debug.domain.core.ArrangementsRecordEntry</value>
                <value>org.youthnet.debug.domain.core.NewPolicyEntry</value>
                <value>org.youthnet.debug.domain.core.Contact</value>
                <value>org.youthnet.debug.domain.core.ContactDetails</value>
                <value>org.youthnet.debug.domain.core.MetaData</value>
                <value>org.youthnet.debug.domain.core.QualityStdsAccrPolicyEntry</value>
                <value>org.youthnet.debug.domain.core.QueriesForViews</value>
                <value>org.youthnet.debug.domain.core.Role</value>
                <value>org.youthnet.debug.domain.core.SearchQueries</value>
                <value>org.youthnet.debug.domain.core.Test</value>
                <value>org.youthnet.debug.domain.core.Users</value>
                <value>org.youthnet.debug.domain.core.VBase3Preference</value>
                <value>org.youthnet.debug.domain.core.ViewsTable</value>
                <value>org.youthnet.debug.domain.core.Volunteer</value>
                <value>org.youthnet.debug.domain.core.VolunteerAddress</value>
                <value>org.youthnet.debug.domain.core.VolunteerContactEmail</value>
                <value>org.youthnet.debug.domain.core.VolunteerContactTelephone</value>
                <value>org.youthnet.debug.domain.core.Organisation</value>
                <value>org.youthnet.debug.domain.core.OrganisationAddress</value>
                <value>org.youthnet.debug.domain.core.OrganisationContact</value>
                <value>org.youthnet.debug.domain.core.Opportunity</value>
                <value>org.youthnet.debug.domain.core.LocationBase</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.hbm2ddl.auto">${hiernate.hbm2ddl}</prop>
                <prop key="hibernate.dialect">${hibernate.dialect}</prop>
                <prop key="hibernate.query.substitutions">${hibernate.substitutions}</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.c3p0.minPoolSize">5</prop>
                <prop key="hibernate.c3p0.maxPoolSize">20</prop>
                <prop key="hibernate.c3p0.timeout">600</prop>
                <prop key="hibernate.c3p0.max_statement">50</prop>
                <prop key="hibernate.c3p0.testConnectionOnCheckout">false</prop>
            </props>
        </property>
    </bean>

    <tx:annotation-driven transaction-manager="coreTransactionManager" order="0"/>

    <bean id="coreTransactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory" ref="coreSessionFactory"/>
        <property name="dataSource" ref="coreDataSource"/>
    </bean>

    <context:component-scan base-package="org.youthnet.debug.dao.core"/>

</beans>